# EditorConfig is awesome
# http://EditorConfig.org
root = true

# defaults
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# md
trim_trailing_whitespace = false

# py
[*.py]
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
